<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register or Login</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <form action="@Url.Action("Register", "User")" method="post">
            <h1>Registration</h1>
            <div class="names">
                <div class="input-box" id="horizontal-names">
                    <input type="text" name="FirstName" placeholder="First name" required autocomplete="given-name" />
                </div>
                <div class="input-box" id="horizontal-names">
                    <input type="text" name="LastName" placeholder="Last name" autocomplete="family-name" />
                </div>
            </div>
            <div class="input-box">
                <input type="text" name="Username" placeholder="Username" required autocomplete="username" />
                <i class="bx bx-user"></i>
            </div>
            <div class="input-box">
                <input type="text" name="Email" placeholder="Email" required autocomplete="email" />
                <i class="bx bx-envelope"></i>
            </div>
            <div class="input-box">
                <input type="password" name="Password" placeholder="Password" required autocomplete="new-password" />
                <i class="bx bx-lock"></i>
            </div>
            <div class="agree-terms">
                <label>
                    <input type="checkbox" required /> I agree to the terms &
                    conditions
                </label>
            </div>
            <button type="submit" class="press">Register</button>
            <div class="login-acc">
                <p>Already have an account? <a href="@Url.Action("Login", "Home")">Login</a></p>
            </div>
        </form>
    </div>
</body>
</html>
